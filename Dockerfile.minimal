FROM php:8.4-apache

# Install only PostgreSQL support first
RUN apt-get update && apt-get install -y \
    libpq-dev \
    && docker-php-ext-install pdo pdo_pgsql \
    && rm -rf /var/lib/apt/lists/*

# Enable Apache mod_rewrite
RUN a2enmod rewrite

# Basic PHP settings
RUN echo "file_uploads = On" >> /usr/local/etc/php/conf.d/revive.ini \
    && echo "memory_limit = 256M" >> /usr/local/etc/php/conf.d/revive.ini

# Set working directory
WORKDIR /var/www/html 